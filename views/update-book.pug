extends layout


block content
  h1 Update Book
  form(action=`/books/${book.id}`, method="POST")
    include form-error
    p 
      label(for="title") Title
      input(type="text", name="title", value=`${book.title}`)#title
    p 
      label(for="author") Author
      input(type="text", name="author", value=`${book.author}`)#author
    p 
      label(for="genre") Genre
      input(type="text", name="genre" value=`${book.genre}`)#genre
    p 
      label(for="year") Year
      input(type="text", name="year" value=`${book.year}`)#year
    p 
      input(type="submit", value="Update Book")
  form(action=`/books/${book.id}/delete`, method="POST", onsubmit="return confirm('Do you really want to delete this book?');")

    p
     a.button(href="/books") Cancel
    p
     input(type="submit", value="Delete Book")